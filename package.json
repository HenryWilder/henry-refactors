{
  "name": "henryrefactors",
  "displayName": "Henry Refactors",
  "description": "Custom refactors created by Henry",
  "repository": "https://github.com/HenryWilder/henry-refactors",
  "author": {
    "name": "Henry Wilder",
    "url": "https://ocp-federation.net/about/authors/henry-wilder/"
  },
  "keywords": [
    "qol"
  ],
  "version": "0.1.0",
  "publisher": "HenryWilder",
  "galleryBanner": {
    "color": "#bf00ff",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "qna": "marketplace",
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "web-palette",
          "title": "Web Palette",
          "icon": "resources/web-palette.svg"
        },
        {
          "id": "language-check",
          "title": "Language Check",
          "icon": "resources/language-check.svg"
        }
      ]
    },
    "views": {
      "web-palette": [
        {
          "type": "webview",
          "id": "named-colors",
          "name": "Named Colors"
        },
        {
          "type": "webview",
          "id": "common",
          "name": "Common colors"
        },
        {
          "type": "webview",
          "id": "favorites",
          "name": "Favorites"
        }
      ],
      "language-check": [
        {
          "type": "webview",
          "id": "language-check-console",
          "name": "Console"
        }
      ]
    },
    "commands": [
      {
        "command": "henryrefactors.henryAlign",
        "title": "Henry Align",
        "category": "Henry Refactors"
      },
      {
        "command": "henryrefactors.cssPreview",
        "title": "CSS Preview",
        "category": "Henry Refactors"
      }
    ],
    "configuration": {
      "title": "Henry Refactors",
      "properties": {
        "henryrefactors.web-palette.favorites": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the color"
              },
              "value": {
                "type": "string",
                "pattern": "^#[0-9a-fA-F]{6}$",
                "description": "Hexcode of the color"
              }
            },
            "additionalProperties": false
          },
          "default": [],
          "uniqueItems": true,
          "description": "Colors displayed in the \"favorites\" view",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "emmet": "^2.4.4"
  }
}
